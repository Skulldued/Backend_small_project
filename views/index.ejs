<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10">
        <form action="/create" method="post">
            <input type="text" name="title" placeholder="Enter Task" class="block text-white outline-none bg-zinc-800 w-full p-3 rounded-md ">
            <textarea name="details" placeholder="Write your task details here" id="" class="block text-white resize-none  outline-none bg-zinc-800 mt-3 p-3  w-full rounded-md"></textarea>
            <input type="submit" name="" id="" class="block mt-3 bg-blue-500 rounded-md px-3 py-1">
        </form>
      </div>
      <div class="tasks flex flex-wrap gap-4 p-10">
            
            <% if(filesany.length > 0){ %>
                <% filesany.forEach((val)=>{ %>
                    <div class="task  min-w-72 px-3 rounded-md py-4 bg-zinc-800">
                        <h1 class="text-white text-2xl tracking-tight"> <%= val %> </h1>
                       <a href="/files/<%= val %>" class="text-blue-500 inline-block mt-3 ">Read More</a>
                       <a href="/edit/<%= val %>" class="text-white px-9">Edit</a>
                   </div>

                    <% }) %>
            <% }else { %>
                <h3 class="text-white ">No task yet</h3>
            <% } %>

      


        
       
      
      </div>
    </div>

    <script src="/javascript/script.js"></script>
  </body>
</html>
